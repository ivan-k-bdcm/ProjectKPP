<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="HScrollView"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageMapActivity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/activity_map" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:contentDescription="cave1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="155dp"
                android:layout_marginLeft="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hood_bar" />
            <ImageButton
                android:id="@+id/imageButton2"
                android:contentDescription="cave2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="175dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hood_bar" />
            <ImageButton
                android:id="@+id/imageButton3"
                android:contentDescription="cave3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="385dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hood_bar" />
            <ImageButton
                android:id="@+id/imageButton4"
                android:contentDescription="cave4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="155dp"
                android:layout_marginLeft="660dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hood_bar" />
            <ImageButton
                android:id="@+id/imageButton5"
                android:contentDescription="cave5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="880dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hood_bar" />
            <ImageButton
                android:id="@+id/imageButton6"
                android:contentDescription="cave6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="1000dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hood_bar" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="410dp"
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hood_bar" />

            <TextView
                android:id="@+id/energyTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="430dp"
                android:layout_marginTop="30dp"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/buttonForge"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="buttonForge"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/forge" />

        <ImageButton
            android:id="@+id/buttonShop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="buttonShop"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/shop" />

        <ImageButton
            android:id="@+id/buttonInventory"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="buttonInventory"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/backpack" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="160dp"
        android:scaleX="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hood_bar" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/AccountImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="AccountImage"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="200dp"
        android:background="@drawable/style_battery_bar"
        android:orientation="horizontal"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/battery1"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />

        <TextView
            android:id="@+id/battery2"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />

        <TextView
            android:id="@+id/battery3"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />

        <TextView
            android:id="@+id/battery4"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />

        <TextView
            android:id="@+id/battery5"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />

        <TextView
            android:id="@+id/battery6"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />

        <TextView
            android:id="@+id/battery7"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />

        <TextView
            android:id="@+id/battery8"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />

        <TextView
            android:id="@+id/battery9"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />

        <TextView
            android:id="@+id/battery10"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/style_battery" />
    </LinearLayout>

    <TextView
        android:id="@+id/countEnergy"
        android:layout_width="30dp"
        android:layout_height="12dp"
        android:layout_marginRight="165dp"
        android:layout_marginTop="3dp"
        android:text="10/10"
        android:textSize="11dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>